---
import faqs from "../data/faq.json";
---

<section class="py-12 md:py-16">
  <div class="mx-auto max-w-6xl px-4">
    <div class="flex items-center gap-2">
      <h2 class="text-2xl md:text-3xl font-bold">FAQ</h2>
    </div>
    <div class="mt-6 grid gap-4 md:grid-cols-2">
      {
        faqs.map((faq) => (
          <div class="bg-white/90 backdrop-blur border border-black/10 rounded-xl p-5">
            <p class="text-black font-semibold">{faq.question}</p>
            <p class="text-black/90 mt-1 text-sm">{faq.answer}</p>
          </div>
        ))
      }
    </div>
  </div>
</section>

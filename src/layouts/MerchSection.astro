---
import Product from "../components/Product.astro";
import products from "../data/products.json";
---

<section id="merch" class="py-12 md:py-16 bg-secondary">
  <div class="mx-auto max-w-6xl px-4">
    <div class="flex items-center justify-between gap-4 text-black">
      <h2 class="text-2xl md:text-3xl font-bold">I nostri prodotti devastanti</h2>
      <a href="#donate" class="hidden sm:block text-sm underline decoration-dotted hover:no-underline"
        >Vedi le ricompense</a
      >
    </div>
    <div class="mt-8 grid gap-6 md:grid-cols-2 lg:grid-cols-4">
      {products.map((product) => <Product {...product} />)}
    </div>
  </div>
</section>

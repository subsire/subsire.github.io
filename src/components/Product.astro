---
import { Image } from "astro:assets";
import Currency from "./Currency.astro";

const { title, subtitle, image, price, description } = Astro.props;
---

<article class="bg-mang backdrop-blur rounded-2xl p-5 flex flex-col gap-2 shadow-lg">
  <div class="flex items-center gap-3">
    <div>
      <h3 class="font-semibold leading-tight">{title}</h3>
      <p class="text-xs text-white/80">{subtitle}</p>
    </div>
  </div>
  <Image src={image} alt={title} class="w-full rounded-lg" width={1080} height={1080} />
  <p class="mt-3 text-sm text-white/90 flex-1">{description}</p>
  <div class="flex items-center justify-between">
    <span class="text-lg font-bold"><Currency value={price} currency="EUR" /></span>
    <a href="#donate" class="text-xs px-3 py-2 rounded-lg bg-white bg-secondary-hover font-semibold text-black">
      Aggiungi
    </a>
  </div>
</article>
